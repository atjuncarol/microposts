<%= form_for(@micropost) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
        <%= f.text_area :content, placeholder: "Compose new micropost..." %>
    </div>
    
　  <div class="form-group">
    <%= f.label :image %>
    <input type="file" id = "image">
     </div>
　　
    <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>


